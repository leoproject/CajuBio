<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CajuBio.View.ViewAbertura"
             BackgroundColor="#082140">
    <StackLayout>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Image Source="logo.png" Aspect="AspectFill" VerticalOptions="Center"
               HorizontalOptions="Center" HeightRequest="160" Margin="40" >
            </Image>
            <Button 
                Text="Efetuar Login"
                HorizontalOptions="Fill"
                HeightRequest="80"
                BackgroundColor="#024A59"
                TextColor="#E6E7E9"
                Command="{Binding efetuarLoginCommand}"/>

            <Button
                Text="Efetuar Cadastro"
                HorizontalOptions="Fill"
                HeightRequest="80"
                BackgroundColor="#024A59"
                TextColor="#E6E7E9" 
                Command="{Binding efetuarCadastroUsuarioCommand}"/>


        </StackLayout>
    </StackLayout>

</ContentPage>
